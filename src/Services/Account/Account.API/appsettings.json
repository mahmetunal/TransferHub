{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "PostgresDb": "Host=localhost;Port=5432;Database=AccountDb;Username=postgres;Password=postgres123"
  },
  "RabbitMQOptions": {
    "Host": "localhost",
    "Username": "rabbitmq",
    "Password": "rabbitmq123"
  },
  "RedisOptions": {
    "ConnectionString": "localhost:6379,password=redis123",
    "InstanceName": "TransferHub:"
  },
  "JwtOptions": {
    "SecretKey": "THub_Prod_JWT_9XK7mF2a8QpWcE6Z0sH4dYVnB1!",
    "Issuer": "TransferHub",
    "Audience": "TransferHub",
    "ExpirationMinutes": "60"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.CorrelationId",
      "Serilog.Exceptions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/account-api-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
                "fileSizeLimitBytes": 104857600,
                "rollOnFileSizeLimit": true
              }
            }
          ]
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": "",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithCorrelationId",
      "WithCorrelationIdHeader",
      "WithExceptionDetails"
    ],
    "Properties": {
      "Application": "Account.API",
      "Environment": "Development"
    }
  },
  "AllowedHosts": "*",
  "OpenTelemetry": {
    "OtlpEndpoint": "http://localhost:4317",
    "EnableConsoleExporter": false,
    "ServiceName": "Account.API",
    "ServiceVersion": "1.0.0"
  }
}
