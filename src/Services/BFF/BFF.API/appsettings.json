{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": "http://localhost:3000,http://localhost:5173",
  "JwtOptions": {
    "SecretKey": "THub_Prod_JWT_9XK7mF2a8QpWcE6Z0sH4dYVnB1!",
    "Issuer": "TransferHub",
    "Audience": "TransferHub",
    "ExpirationMinutes": 60
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.CorrelationId",
      "Serilog.Exceptions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "System.Net.Http.HttpClient": "Warning",
        "Yarp": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/bff-api-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
                "fileSizeLimitBytes": 104857600,
                "rollOnFileSizeLimit": true
              }
            }
          ]
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": "",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithCorrelationId",
      "WithCorrelationIdHeader",
      "WithExceptionDetails"
    ],
    "Properties": {
      "Application": "BFF.API",
      "Environment": "Development"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "transfer-route": {
        "ClusterId": "transfer-cluster",
        "Match": {
          "Path": "/api/v{version:apiVersion}/transfers/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated",
        "Transforms": [
          {
            "RequestHeadersCopy": "true"
          },
          {
            "RequestHeader": "X-Forwarded-For",
            "Append": "{RemoteIpAddress}"
          }
        ]
      },
      "account-route": {
        "ClusterId": "account-cluster",
        "Match": {
          "Path": "/api/v{version:apiVersion}/accounts/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated",
        "Transforms": [
          {
            "RequestHeadersCopy": "true"
          },
          {
            "RequestHeader": "X-Forwarded-For",
            "Append": "{RemoteIpAddress}"
          }
        ]
      },
      "transfer-hub-route": {
        "ClusterId": "transfer-cluster",
        "Match": {
          "Path": "/hubs/transfer/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated"
      }
    },
    "Clusters": {
      "transfer-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7068"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Path": "/health"
          }
        }
      },
      "account-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7043"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Path": "/health"
          }
        }
      }
    }
  },
  "OpenTelemetry": {
    "OtlpEndpoint": "http://localhost:4317",
    "EnableConsoleExporter": false,
    "ServiceName": "BFF.API",
    "ServiceVersion": "1.0.0"
  }
}
